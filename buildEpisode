#mkdir $1
if [ $3 == "original" ]; then
    python cut.py $1 $2
    python say.py $1 $2
else
    #python clean.py $1/$1-$2.vtt > $1/$1-$2.txt
    echo "Translating $1-$2.vtt"
    python translate.py $1/$1-$2.vtt $3 > $1/$1-$3.vtt
    python say.py $1 $2
    python say.py $1 $3
fi
python combine.py $1 $2 $3
./video $1

