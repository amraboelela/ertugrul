mkdir -p data/$1

if [ ! -f data/$1-$3.mp4 ]; then
    python cut.py $1 $3
    if [ ! -f data/$1-$3.vtt ]; then
        echo "Translating $1-$2.vtt"
        python translate.py data/$1-$2.vtt $3 > data/$1-$3.vtt
    fi
    python say.py $1 1 $2
    python say.py $1 2 $3
    #exit 0

    python combine.py $1 $2 $3
    #exit 0
    ./video $1 $3
fi
